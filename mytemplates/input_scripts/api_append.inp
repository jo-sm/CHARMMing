{% for rtf in rtf_list %}
   {% ifequal forloop.counter 1 %}
      read rtf card name {{rtf}}
   {% else %}
      read rtf card append name {{rtf}}
   {% endifequal %}
{% endfor %}

{% for prm in prm_list %}
   {% ifequal forloop.counter 1 %}       
      read param flex card name {{prm}}
   {% else %}       
      read param flex card append name {{prm}}
   {% endifequal %} 
{% endfor %}

{% for str in str_list %}
stream {{str}}
{% endfor %}

